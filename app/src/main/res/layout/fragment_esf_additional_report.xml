<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FaFaFa">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_dialog_accent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:textColor="@color/black"
                        android:text="والو قطع و وصل:"
                        android:layout_marginRight="20dp"/>
                    <RadioGroup
                        android:id="@+id/radioQatVasl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioqat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="دارد"
                            android:textSize="35sp" />

                        <RadioButton
                            android:id="@+id/radioVasl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="ندارد"
                            android:textSize="35sp" />

                    </RadioGroup>
                </LinearLayout>
                <View android:background="?attr/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:textColor="@color/black"
                        android:text="وضعیت محل کنتور:"
                        android:layout_marginRight="20dp"/>
                    <RadioGroup
                        android:id="@+id/radioVaziatCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_weight="1"
                            android:id="@+id/radioCounterMonaseb"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="مناسب"
                            android:textSize="35sp"/>

                        <RadioButton
                            android:layout_weight="1"
                            android:id="@+id/radioCounterNaMonaseb"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="نامناسب"
                            android:textSize="35sp" />

                    </RadioGroup>
                </LinearLayout>
                <View
                    android:background="?attr/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:textColor="@color/black"
                        android:text="نشت آب حوضچه:"
                        android:layout_marginRight="20dp"/>
                    <RadioGroup
                        android:id="@+id/radioNasht"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_weight="1"
                            android:id="@+id/radioNashtDarad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="دارد"
                            android:textSize="35sp"/>

                        <RadioButton
                            android:layout_weight="1"
                            android:id="@+id/radioNashtNadarad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ندارد"
                            android:textSize="35sp" />

                    </RadioGroup>
                </LinearLayout>
                <View android:background="?attr/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:textColor="@color/black"
                        android:text="در حال ساخت و ساز:"
                        android:layout_marginRight="20dp"/>
                    <RadioGroup
                        android:id="@+id/radioSaxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioSaxtAst"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="میباشد"
                            android:textSize="35sp"
                            android:layout_weight="1"/>

                        <RadioButton
                            android:id="@+id/radioSaxtNist"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="نمیباشد"
                            android:textSize="35sp"
                            android:layout_weight="1"/>

                    </RadioGroup>
                </LinearLayout>
                <View android:background="?attr/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:text="مسکونی"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:text="تجاری"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:text="کل"
                            android:layout_marginRight="20dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tedadMaskooniRd"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:id="@+id/tedadTejariRd"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:id="@+id/tedadSaierRd"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_marginRight="20dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/tMas"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_marginRight="20dp"
                            android:inputType="number"/>
                        <EditText
                            android:id="@+id/tTej"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_marginRight="20dp"
                            android:inputType="number"/>
                        <EditText
                            android:id="@+id/tSai"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_marginRight="20dp"
                            android:inputType="number"/>

                    </LinearLayout>
                </LinearLayout>
                <View android:background="?attr/colorAccent" android:layout_width="match_parent" android:layout_height="3px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/preKarbari"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_marginRight="20dp"/>
                    <Spinner
                        android:id="@+id/spinner"
                        android:background="@drawable/border_text_view"
                        android:spinnerMode="dropdown"
                        android:popupBackground="?attr/colorPrimary"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="35sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View android:background="?attr/colorAccent" android:layout_width="match_parent" android:layout_height="3px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:id="@+id/preMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="35sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <View android:background="?attr/colorAccent" android:layout_width="match_parent" android:layout_height="3px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textColorHint="?attr/colorPrimaryDark">
                        <EditText
                            android:id="@+id/possibleMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="شماره همراه"
                            android:inputType="number"
                            android:theme="@style/MyEditTextTheme"
                            android:textSize="35sp"
                            android:textColor="?attr/colorPrimaryDark"
                            android:maxLength="11"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <View android:background="?attr/colorAccent" android:layout_width="match_parent" android:layout_height="3px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/registerEsf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorPrimaryDark"
                        android:text="ثبت"
                        android:textColor="#D6D7D7"
                        android:textSize="35sp"/>
                    <Button
                        android:visibility="gone"
                        android:id="@+id/cancelEsf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="کنسل"
                        android:textSize="35sp"/>
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>
</ScrollView>